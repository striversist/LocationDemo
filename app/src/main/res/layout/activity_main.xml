<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/get_perms_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Permissions"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/open_settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Settings"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/start_get_loc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Getting Location"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/stop_get_loc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Getting Location"
            android:onClick="onClick"/>
    </LinearLayout>

</RelativeLayout>